{
  "name": "bento-budget",
  "version": "4.1.0",
  "description": "Application de gestion de budget futuriste avec comptes, budgets et suivi en temps r√©el.",
  "private": true,
  "main": "electron.js",
  "author": "Axel",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "electron .",
    "dist": "cross-env NODE_ENV=production vite build && electron-builder",
    "publish": "cross-env NODE_ENV=production vite build && electron-builder --publish always"
  },
  "build": {
    "appId": "com.bento.budget",
    "productName": "Bento Budget",
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "src/googleAuth.js",
      "assets/**/*"
    ],
    "asar": true,
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "milax1905",
        "repo": "bento-budget",
        "releaseType": "release"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/milax1905/bento-budget.git"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "framer-motion": "^12.23.12",
    "google-auth-library": "^10.3.0",
    "googleapis": "^159.0.0",
    "keytar": "^7.9.0",
    "lucide-react": "^0.302.0",
    "open": "^10.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "28.2.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "vite": "^5.2.0",
    "wait-on": "^7.0.1"
  }
}
